<div class="container my-3">
    <div class="row mb-3">
        <div class="col">
            <h3 class="mb-0 font-weight-bold text-muted">
                <span class="text-uppercase">Creative Report</span>
                <span class="h6 text-muted">a breakdown of how your individual creatives are performing!</span>
            </h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <span class="h5 font-weight-bold text-uppercase text-danger">
                        Campaign
                    </span>
                    <span class="text-muted">
                        {{ model.campaignHash.advertiser.name }} | {{moment-format model.campaignHash.criteria.start "MM/DD/YYYY"}}{{#if model.campaignHash.criteria.end}}
                        - {{moment-format model.campaignHash.criteria.end "MM/DD/YYYY"}}{{/if}} {{#if model.campaignHash.description}}
                        | {{ model.campaignHash.description }} {{/if}}
                    </span>
                </div>
            </div>
        </div>
    </div>
    {{#each model.reportCampaignCreativeBreakdown.creatives as |creative|}}
    <div class="row">
        <div class="col">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-xl-3 grid preview">
                            <img src="{{ creative.image.src }}?w=640&h=360&crop=focalPoint&fit=crop&dpr=1&fp-x={{ creative.image.focalPoint.x }}&fp-y={{ creative.image.focalPoint.y }}" class="img-fluid">
                            <h3 class="mt-3 font-weight-bold">{{ creative.title }}</h3>
                            {{#if creative.teaser}}
                                <p>{{ creative.teaser }}</p>
                            {{/if}}
                            <p class="mb-0"><strong>Sponsored</strong> - {{moment-format model.campaignHash.criteria.start "MMM DD, YYYY"}}</p>
                        </div>
                        <div class="col-md-6 col-xl-9">
                            <div class="row">


                                <div class="col-xl-4">
                                    <div class="row">
                                        <div class="col-5 col-xs-5">
                                            <div class="icon-50pxh text-center text-info">
                                                {{entypo-icon "eye"}}
                                            </div>
                                        </div>
                                        <div class="col-7 text-right">
                                            <p class="mb-0 text-uppercase">Impressions</p>
                                            <p data-placement="top">
                                                <span class="h5 block text-info">{{ creative.views }}</span>
                                                <small class="text-muted">({{ impressions }})</small>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="footer text-center text-white bg-info py-3 mb-3">
                                        <small class="text-uppercase">In-View Impressions</small>
                                    </div>
                                </div>
                                <div class="col-xl-4">
                                    <div class="row">
                                        <div class="col-5 col-xs-5">
                                            <div class="icon-50pxh text-center text-warning">
                                                {{entypo-icon "direction"}}
                                            </div>
                                        </div>
                                        <div class="col-7 text-right">
                                            <p class="mb-0 text-uppercase">Clicks</p>
                                            <p data-placement="top">
                                                <span class="h5 block text-warning">{{ creative.clicks }}</span>
                                                <small class="text-muted">({{ clicks }})</small>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="footer text-center text-white bg-warning py-3 mb-3">
                                        <small class="text-uppercase">Success of online ads</small>
                                    </div>
                                </div>
                                <div class="col-xl-4">
                                    <div class="row">
                                        <div class="col-5 col-xs-5">
                                            <div class="icon-50pxh text-center text-success">
                                                {{entypo-icon "area-graph"}}
                                            </div>
                                        </div>
                                        <div class="col-7 text-right">
                                            <p class="mb-0 text-uppercase">CTR</p>
                                            <p data-placement="top">
                                                <span class="h5 block text-success">{{ creative.ctr }}%</span>
                                                <small class="text-muted">({{ ctr }})</small>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="footer text-center text-white bg-success py-3 mb-3">
                                        <small class="text-uppercase">Click-through rate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    {{high-charts series=impressionSummary.data options=impressionSummary.options}}
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    {{high-charts series=ctrSummary.data options=ctrSummary.options}}
                </div>
            </div>
        </div>
    </div>
</div>
